<div class="row">
  <div class="col-sm-6 col-sm-offset-3 form-box">
    <div class="form-top">
      <div class="form-top-left">
        <h3>Login to our site</h3>
        <p>Enter your email and password to log on:</p>
      </div>
      <div class="form-top-right">
        <i class="fa fa-key"></i>
      </div>
    </div>
    <div class="form-bottom">
      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'login-form' }) do |f| %>
          <div class="form-group">
            <%= f.input :email, :required => false, wrapper: false, :autofocus => true, :input_html => {:class => 'form-email form-control'}, :placeholder => 'Email...' %>
          </div>
          <div class="form-group">
            <%= f.input :password, :required => false, wrapper: false, :input_html => {:class => 'form-password form-control'}, :placeholder => 'Password...' %>
          </div>
          <div class="form-group">
            <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign in", :class => 'btn' %>
          </div>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3 social-login">
    <h3>...or login with:</h3>

    <%= render "users/shared/social" %>
  </div>
</div>
<div class="row">
  <%= render "users/shared/links" %>
</div>