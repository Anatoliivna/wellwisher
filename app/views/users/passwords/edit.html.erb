<div class="row">
  <div class="col-sm-6 col-sm-offset-3 form-box">
    <div class="form-top">
      <h2>Change your password</h2>
    </div>
    <div class="form-bottom">
      <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'login-form'  }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, :as => :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-group">
            <%= f.input :password, :required => true, wrapper: false, :autofocus => true, :input_html => {:class => 'form-email form-control'}, :placeholder => 'New password...' %>
          </div>

          <div class="form-group">
            <%= f.input :password_confirmation, :required => true, wrapper: false, :input_html => {:class => 'form-email form-control'}, :placeholder => 'Confirm your new password...' %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Change my password", :class => 'btn' %>
          </div>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <%= render "users/shared/links" %>
</div>
